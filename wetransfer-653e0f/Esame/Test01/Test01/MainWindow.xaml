        xmlns:local="clr-namespace:Test01"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <DockPanel>

            <Label Content="Inserisci i numeri"/>
            <TextBox x:Name="numero1" Width="80" Padding="5" Margin="10 0 10 0"/>
